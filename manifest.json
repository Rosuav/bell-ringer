{
	"manifest_version": 3,
	"name": "Bell-Ringer",
	"description": "Regain control of your Chrome tab notifications and Twitch clipboard",
	"version": "0.3",
	"icons": {"128": "icon128.png"},
	"content_scripts": [
		{
			"matches": ["https://streamlabs.com/*"],
			"css": ["bell-ringer.css"],
			"js": ["bell-ringer.js"]
		},
		{
			"matches": ["https://*.twitch.tv/*"],
			"css": ["twitchtweaks.css"],
			"js": ["twitchtweaks.js"]
		}
	]
}
